<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shouyebg1"
    android:orientation="vertical"
    tools:context=".DoctorShouyeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="36dp">

        <Button
            android:id="@+id/sendadvice_back_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/doctor_fanhui" />

        <TextView
            android:id="@+id/gethuanzhe_name_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="patientname"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/xiaoxi" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"/>
<!--        app:srcCompat="@mipmap/chooseid_doctor_yuanjiao" -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:background="@drawable/doctor_shouye_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/state_change_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto_bold"
            android:text="state change"
            android:textColor="@color/tag1tv"
            android:textSize="26sp" />


        <SeekBar
            android:id="@+id/state_change_sb"
            style="@style/CustomSeekbarStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="15dp"
            android:max="200"
            android:progress="100"
            android:splitTrack="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/num1"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="-100" />
            <TextView
                android:id="@+id/num2"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="-75" />

            <TextView
                android:id="@+id/num3"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="-50" />

            <TextView
                android:id="@+id/num4"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="-25" />

            <TextView
                android:id="@+id/num5"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="0" />
            <TextView
                android:id="@+id/num6"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="25" />
            <TextView
                android:id="@+id/num7"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="50" />
            <TextView
                android:id="@+id/num8"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="75" />
            <TextView
                android:id="@+id/num9"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F3f3f3"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/state_change_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="change :"
                android:textColor="#444444"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/state_change_num_tv"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="0"
                android:background="@drawable/send_advice_num"
                android:textColor="#444444"
                android:textSize="18sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/state_advice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="state advice"
            android:textColor="@color/tag1tv"
            android:textSize="26sp" />

        <com.example.bubble422.HorizontalListView
            android:id="@+id/state_advice_lv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="26dp"
            android:divider="@null"
            android:dividerHeight="20dp"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/textnote_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="textnote"
            android:textColor="@color/tag1tv"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/textnote_etv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="26dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#dddddd"
            android:textSize="20sp"
            android:text="send your advise for patient"
            android:background="@drawable/doctor_send_edti1" />

        <Button
            android:id="@+id/stateadvice_finish"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/sharp_point1"
            android:text="âˆš" />

    </LinearLayout>

</RelativeLayout>