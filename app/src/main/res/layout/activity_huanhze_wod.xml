<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd4d9"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="60dp">

        <Button
            android:id="@+id/huanzhe_wode_back_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/fanhui1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/xiaoxi" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/huanzhe_img_upload"
                android:layout_width="72dp"
                android:layout_height="72dp"

                android:background="@mipmap/happy_1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="patient name"
                    android:textColor="#444444"
                    android:textSize="24sp"  />

                <EditText
                    android:id="@+id/textView6"
                    android:layout_marginLeft="12dp"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:background="@drawable/btn_login"
                    android:text="TYPE" />
            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=">"
                android:textColor="#aaaaaa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/huanzhe_vocation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#444444"
                android:textSize="24sp"
                android:text="vocation" />
            <EditText
                android:id="@+id/huanzhe_vocation_etv"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#444444"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:hint="edit your vocation"
                android:textSize="18sp" >


            </EditText>



            <Button
                android:id="@+id/button5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=">"
                android:textColor="#aaaaaa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#444444"
                android:textSize="24sp"
                android:text="phone"/>

            <TextView
                android:id="@+id/huanzhe_phonenum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:textColor="#444444"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=">"
                android:textColor="#aaaaaa"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#444444"
                android:textSize="24sp"
                android:text="e-mail"/>

            <EditText
                android:id="@+id/huanzhe_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:hint="edit your e-mail"
                android:fontFamily="@font/roboto"
                android:textColor="#444444"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=">"
                android:textColor="#aaaaaa"  />
        </LinearLayout>

        <Button
            android:id="@+id/huanzhe_emotion_img"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="emotion move" />

        <Button
            android:id="@+id/huanzhe_save_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:background="@drawable/eidt_bubble_start"
            android:text="save"
            android:textSize="14sp"
            android:textColor="@color/bubbleeditfinish" />

    </LinearLayout>
</LinearLayout>