<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="36dp"
    android:orientation="vertical"
    android:background="@drawable/create_huanzhe_bg">

    <Button
        android:id="@+id/create_huanzhe_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/create_huanzhe_image_tv"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="photo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@mipmap/happy_1" />

    <TextView
        android:id="@+id/create_huanzhe_name_tv"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="name" />

    <EditText
        android:id="@+id/create_huanzhe_name_etv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/create_huanzhe_name_etv"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/create_huanzhe_state_tv"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="depression"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/huanzhe_state_mild"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:stateListAnimator="@null"
            android:background="@drawable/create_huanzhe_state_unselected"
            android:text="mild" />

        <Button
            android:id="@+id/huanzhe_state_moderate"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:stateListAnimator="@null"
            android:layout_marginRight="10dp"
            android:background="@drawable/create_huanzhe_state_unselected"
            android:text="moderate" />
        <Button
            android:id="@+id/huanzhe_state_severe"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:stateListAnimator="@null"
            android:background="@drawable/create_huanzhe_state_unselected"
            android:text="severe" />
    </LinearLayout>

    <TextView
        android:id="@+id/create_huanzhe_note_tv"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="note"/>

    <EditText
        android:id="@+id/create_huanzhe_note_etv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/create_huanzhe_name_etv"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/create_huanzhe_finish"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="right|bottom"
        android:gravity="center"
        android:background="@drawable/create_huanzhe_finish"
        android:text="finish"
        android:stateListAnimator="@null"
        android:textSize="14sp"
        android:textColor="@color/white" />

</LinearLayout>