<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/wenjuan2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="260dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/wenjuan_btn"
                        android:stateListAnimator="@null"
                        android:text="A Little Of The Time"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="260dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/wenjuan_btn"
                        android:stateListAnimator="@null"
                        android:text="Some Of The Time"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="260dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/wenjuan_btn"
                        android:stateListAnimator="@null"
                        android:text="Good Part Of The Time"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="260dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/wenjuan_btn"
                        android:stateListAnimator="@null"
                        android:text="Most Of The Time"
                        android:textColor="@color/wenjuan_btn_t_un"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>