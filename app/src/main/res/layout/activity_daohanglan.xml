<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/topni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">

        <Button
            android:id="@+id/liangbiao_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/liangbiao1" />

        <Button
            android:id="@+id/zhaoxiang_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginRight="90dp"
            android:background="@mipmap/zhaoxiang" />

        <Button
            android:id="@+id/shezhi_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@mipmap/shezhi1" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/fragment_huanzhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shouye_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/shouye1" />

        <Button
            android:id="@+id/yuyin_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@mipmap/yuyin1" />

        <Button
            android:id="@+id/wode_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@mipmap/wode1" />
    </LinearLayout>



</FrameLayout>